{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strictNullChecks": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",

    "paths": {
      "src/*": ["src/*"]
    },

    "declaration": true,
    "removeComments": true,
    "incremental": true
  }
}
